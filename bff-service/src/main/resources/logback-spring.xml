<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Configuración de colores para consola -->
    <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" class="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" class="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

    <!-- Patrón para consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%clr(%d{HH:mm:ss.SSS}){faint} %clr([%X{service:-BFF}]){blue} %clr([%X{trackingId:-N/A}]){yellow} %clr(%-5level){green} %clr(%logger{20}){cyan} %clr(-){faint} %msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Appender para archivo -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/bff-service.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{service:-BFF}] [%X{trackingId:-N/A}] [%X{correlationId:-N/A}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/bff-service.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Logger específico para tracking de requests -->
    <logger name="REQUEST_TRACKER" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Logger para llamadas externas -->
    <logger name="EXTERNAL_CALLS" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Configuración por paquetes -->
    <logger name="codes.alem.bffservice.controller" level="INFO"/>
    <logger name="codes.alem.bffservice.service" level="DEBUG"/>
    <logger name="codes.alem.bffservice.aspect" level="WARN"/>

    <!-- Reducir logs de Spring -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="reactor.netty" level="WARN"/>
    <logger name="io.netty" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
